<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="500.0" prefWidth="400.0" spacing="15.0" styleClass="root" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="LoginController">
   <children>
      <Label styleClass="title-label" text="Bartabahok" />
      <Label fx:id="statusLabel" styleClass="status-label" text="Enter your credentials to login or sign up." />
      <VBox alignment="CENTER" maxWidth="300.0" spacing="10.0">
         <children>
            <TextField fx:id="usernameField" promptText="Username" styleClass="text-field" />
            <PasswordField fx:id="passwordField" promptText="Password" styleClass="text-field" />
         </children>
      </VBox>
      <VBox alignment="CENTER" spacing="10.0">
         <children>
            <Button fx:id="loginButton" mnemonicParsing="false" onAction="#handleLogin" prefWidth="150.0" styleClass="button-login" text="Login" />
            <Button fx:id="signupButton" mnemonicParsing="false" onAction="#handleSignup" prefWidth="150.0" styleClass="button-signup" text="Sign Up" />
         </children>
      </VBox>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>